extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center HelperPeople
        h2.text-center.text-2xl.font-extrabold= pagina

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email de Registro  
                        input#email.w-full.px-3.py-2.border.border-purple-500.rounded-md.placeholder-purple-600(placeholder="Tu Email" type="email" name="email")
                    
                    div.flex.items-center.justify-between
                        a.text-blue-600.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una
                        a.text-blue-600.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión

                    input(class="w-full bg-purple-800 hover:bg-purple-500 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")